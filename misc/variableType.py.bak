# python string practice

str = 'hello world!'

print str           # print string
print str[2:]       # print string starting from 3rd character
print str[:2]       # print string 
print str[2]        # print 3rd character
print str[1:4]      # print 2nd till 4th character
print str * 2
print str + 'test'

# python list practice

list = ['abcd', 878, 2.34, 'john', 98.1]
tinylist = [123, 'nick']

print list          # print list
print list[0]       # print 1st item in list
print list[1:3]     # print 2nd til 3th items in list
print list[2:]      # print 3th till end items in list
print tinylist * 2  # print list two times
print list + tinylist # print concatenated lists

# python tuple practice
# difference between list and tuple
# 1: list is enclosed by [];tuple is enclosed by ()
# 2: element in list can be chagned; element in tuple can't be changed

tuple = ('abcd', 878, 2.34, 'john', 98.1)
tinytuple = (123, 'john')

print tuple             # print tuple
print tuple[0]          # print 1st item in tuple
print tuple[1:3]        # print 2nd till 3th items in tuple
print tuple[2:]         # print 3th till end items in tuple
print tinytuple * 2     # print tinytuple two times
print tuple + tinytuple # print concatenated tuple

